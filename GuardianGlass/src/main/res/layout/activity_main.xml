<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/sir_peter_fahy"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/timestamp_text"
            android:layout_marginTop="@dimen/top_bottom_padding"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/timestamp_nine"
            android:layout_marginLeft="@dimen/left_right_padding"
            android:textSize="16sp"
            android:paddingLeft="40dp"
            android:textColor="@android:color/black"
            android:text="moments ago"
            android:layout_width="wrap_content" />

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/title"
            style="@style/title_style"
            android:text="Greater Manchester police charged over shooting of Anthony Grainger"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

    </RelativeLayout>
</FrameLayout>